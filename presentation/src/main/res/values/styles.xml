<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="TypographyToolbarTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="TypographyCurrencyCode">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#191C1F</item>
        <item name="android:textSize">@dimen/font_size_currency_code</item>
    </style>

    <style name="TypographyCurrencyName">
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#8B959E</item>
        <item name="android:textSize">@dimen/font_size_currency_name</item>
    </style>

    <style name="TypographyRate">
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#191C1F</item>
        <item name="android:textSize">@dimen/font_size_rate</item>
    </style>

</resources>
